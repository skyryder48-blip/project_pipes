<?xml version="1.0" encoding="UTF-8"?>
<!--
    WEAPONCOMPONENTS.META - Magazine Components for Ammo Types
    Defines FMJ, Hollow Point, and Armor Piercing magazine components.
    These components are swapped by the ammo_system script when loading different ammo types.
-->
<CWeaponComponentInfoBlob>
  <Infos>
    <!-- ==========================================
         FMJ MAGAZINE - Standard 9mm
         Baseline damage, standard penetration
         ========================================== -->
    <Item type="CWeaponComponentClipInfo">
      <n>COMPONENT_G17_CLIP_FMJ</n>
      <Model />
      <LocName>WCT_CLIP_FMJ</LocName>
      <LocDesc>WCD_CLIP_FMJ</LocDesc>
      <ClipSize value="17" />
      <AmmoInfo ref="AMMO_PISTOL" />
    </Item>
    
    <!-- ==========================================
         HOLLOW POINT MAGAZINE
         +10% damage, reduced penetration
         ========================================== -->
    <Item type="CWeaponComponentClipInfo">
      <n>COMPONENT_G17_CLIP_HP</n>
      <Model />
      <LocName>WCT_CLIP_HP</LocName>
      <LocDesc>WCD_CLIP_HP</LocDesc>
      <ClipSize value="17" />
      <AmmoInfo ref="AMMO_PISTOL_HOLLOWPOINT" />
    </Item>
    
    <!-- ==========================================
         ARMOR PIERCING MAGAZINE
         -10% damage, +100% penetration (bypasses armor)
         Reduced capacity (-2 rounds) to balance
         ========================================== -->
    <Item type="CWeaponComponentClipInfo">
      <n>COMPONENT_G17_CLIP_AP</n>
      <Model />
      <LocName>WCT_CLIP_AP</LocName>
      <LocDesc>WCD_CLIP_AP</LocDesc>
      <ClipSize value="15" />
      <AmmoInfo ref="AMMO_PISTOL_FMJ" />
    </Item>
  </Infos>
</CWeaponComponentInfoBlob>
